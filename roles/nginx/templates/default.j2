server {
	listen 80 default_server;
	listen [::]:80 default_server;
	listen 8080 default_server;
    listen [::]:8080 default_server;

	server_name _;


	{% if inventory_hostname in groups['app_servers'] %}
	location / {
		proxy_pass http://127.0.0.1:{{ docker_agama_port }};

	}
	{% endif %}
	{% if inventory_hostname in groups['node_exporters'] %}
    location /metrics {
		proxy_pass http://127.0.0.1:9100/metrics;
	}
	{% endif %}

	{% if inventory_hostname in groups['web_servers'] %}
    location /nginx-metrics {
        proxy_pass http://127.0.0.1:9113/metrics;
    }
    {% endif %}

	{% if inventory_hostname in groups['db_servers'] %}
    location /mysql-metrics {
		proxy_pass http://127.0.0.1:9104/metrics;
	}
    {% endif %}
	{% if inventory_hostname in groups['dns_server'] %} 
    location /bind-metrics {
		proxy_pass http://127.0.0.1:9119/metrics;
	}
    {% endif %}

    {% if inventory_hostname in groups['prometheus'] %}
    location /prometheus {
            proxy_pass http://127.0.0.1:9090;
    }
	{% endif %}
	{% if inventory_hostname in groups['grafana'] %}  
    location /grafana {
			#proxy_pass http://127.0.0.1:3000;
     	    proxy_pass http://127.0.0.1:{{ docker_grafana_port }};
	}
    {% endif %}


	{% if inventory_hostname in groups['web_servers'] %}
	location /stub_status {
                stub_status;
    }
	{% endif %}


	# Reverse proxy HAProxy and keepalived exporter metrics since Lab 13 - HAProxy
      
        {% if inventory_hostname in groups['haproxy'] %}
        #Reverse proxy for HAProxy exporter

        location /haproxy-metrics {
     	        proxy_pass http://127.0.0.1:{{ docker_haproxy_exporter_port }}/metrics;
	}
        {% endif %}
        
        {% if inventory_hostname in groups['haproxy'] %}
        #Reverse proxy for keepalived exporter

        location /keepalived-metrics {
     	        proxy_pass http://127.0.0.1:{{ keepalived_exporter_port }}/metrics;
	}
        {% endif %}
        
        {% if inventory_hostname in groups['haproxy'] %}
        #Reverse proxy for HAProxy

        location /haproxy {
     	        proxy_pass http://127.0.0.1:{{ haproxy_port }}/haproxy?stats;
	}
        {% endif %}



}

